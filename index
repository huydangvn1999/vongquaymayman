  <script>
    let spinsLeft = 29;
    const resultBox = document.getElementById('result');
    const spinsLeftBox = document.getElementById('spinsLeft');
    const wheel = document.getElementById('wheel');

    const prizeOrder = [
      "500.000 VNƒê", "500.000 VNƒê",
      "200.000 VNƒê", "200.000 VNƒê", "200.000 VNƒê",
      "200.000 VNƒê", "200.000 VNƒê", "200.000 VNƒê",
      ...Array(21).fill("100.000 VNƒê")
    ];

    function shuffle(array) {
      for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
    }

    shuffle(prizeOrder);

    function spin() {
      if (spinsLeft <= 0) {
        resultBox.innerText = "üéâ ƒê√£ quay h·∫øt 29 l∆∞·ª£t!";
        return;
      }

      const prize = prizeOrder[29 - spinsLeft];
      let angle;

      if (prize === "500.000 VNƒê") angle = 30;
      else if (prize === "200.000 VNƒê") angle = 110;
      else angle = 270;

      const rotateDeg = 360 * 5 + angle + Math.floor(Math.random() * 10 - 5);
      wheel.style.transition = "transform 4s ease-out";
      wheel.style.transform = `rotate(${rotateDeg}deg)`;

      setTimeout(() => {
        resultBox.innerText = `üéÅ B·∫°n nh·∫≠n ƒë∆∞·ª£c: ${prize}`;
        spinsLeft--;
        spinsLeftBox.innerText = spinsLeft;
      }, 4200);
    }
  </script>
